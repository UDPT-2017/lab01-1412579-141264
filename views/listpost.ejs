
<% include block/header.ejs %>		
		<div class="container">
		<header>
			<a href="/"><img src="/images/logo.png"></a>
		</header>
		<section>
		<div class="row row-offcanvas row-offcanvas-left">
				<div class="col-md-8 float">
					<article class="blog-post">
						<div class="blog-post-body">
							<h2><a href="post.html">List of your post</a></h2>
							<p>You can create new, edit, and delete your post here.</p>
							<div class="row">
				                <div class="col-md-12">
				                    <div class="panel panel-default">
				                        <div class="panel-heading">
				                            List of your post
				                        </div>
				                        <!-- /.panel-heading -->
				                        <div class="panel-body">
				                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
				                                <thead>
				                                    <tr>
				                                        <th>idpost</th>
				                                        <th>Title</th>
				                                        <th>Slug</th>
				                                        <th>Content</th>
				                                        <th>Thumbnail</th>
				                                        <th>Views</th>
				                                        <th>Edit</th>
				                                    </tr>
				                                </thead>
				                                <tbody>
				                                <% list.rows.forEach(function(post){ %>
				                                    <tr class="gradeU">
				                                        <td><%= post.idpost %></td>
				                                        <td class=""><%= post.title  %></td>
				                                        <td><%= post.slug %></td>
				                                        <td><%= post.content.slice(0,100) %>...</td>
				                                        <td class="center"><img width="100" height="auto" src="/images/<%= post.thumbnail %>"></td>
				                                        <td class="center"><%= post.view %></td>
				                                        <td><a href="/edit/<%= post.idpost %>">Click here</a></td>
				                                    </tr>
				                                <%	}); %>
				                                </tbody>
				                            </table>
				                            <!-- /.table-responsive -->
				                        
				                        </div>
				                        <!-- /.panel-body -->
				                    </div>
				                    <!-- /.panel -->
				                </div>
				                <!-- /.col-lg-12 -->
				            </div>
						</div>
					</article>
				</div>
				<form action="/listpost" method="post">
					<input id="<%= user.id%>" type="hidden">
				</form>
				<div class="col-md-4 sidebar-gutter">
					<div class="sidebar-offcanvas" id="sidebarLeft" role="navigation">
					<!-- sidebar-widget -->
					<div class="sidebar-widget">
						<h3 class="sidebar-title col-md-12 col-xs-12">POST</h3>
						<div class="widget-container">
							<article class="widget-post">
								<div class="post-body">
									<h2 class="db"><i class="glyphicon glyphicon-pencil"></i><a href="post"> Create new post</a></h2>
									<br>
								</div>
								<div class="post-body">
									<h2 class="db"><i class="glyphicon glyphicon-list"></i><a href="listpost/<%= user.id %>"> List post</a></h2>
									<br>
								</div>
							</article>
						</div>
					</div>
			
					<!-- sidebar-widget -->
					<div class="sidebar-widget">
						<img src="http://placehold.it/600x900" class="img-rounded" alt="">
					</div>
					<!-- sidebar-widget -->

					</div>
					
					</div>
				</div>
			</div>
		</section>
		</div><!-- /.container -->

<% include block/footer.ejs %>		