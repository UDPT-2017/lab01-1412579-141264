<% include block/header.ejs %>		
		<div class="container">
		<header>
			<a href="/"><img src="/images/logo.png"></a>
		</header>
		<section>
			<div class="row row-offcanvas row-offcanvas-left">
				<div class="col-md-8 float">
				<ol class="breadcrumb">
				  <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
				  <li class="breadcrumb-item"><a href="#">Edit post</a></li>
				  <li class="breadcrumb-item"><a href="#"> <%= post.title%></a></li>					 	
				</ol>
					<h2>Create new post</h2>
					<form action="/edit/<%= post.idpost %>" method="post" enctype='multipart/form-data'>
					<% if(user){ %>
						<input type="hidden" name="id" value="<%= user.id %>">
							<%}%>
                            <fieldset>
                                <div class="form-group">
                                	<label>Title</label>
                                	<br>
                                    <textarea name="title" id="title" cols="70" rows="1"><%= post.title%></textarea>
                                    <div id="title-alert"></div>
                                </div>
                                <div class="form-group">
                                	<label>Thumbnail</label>
                                	<br>
                                	<% if(post.thumbnail){ %> 
                                		<a href="/del/<%= post.idpost %>">Delete thumbnail</a>
                                		<br>
                                    	<img src="/images/<%= post.thumbnail%>" width="400" height="auto">
                                    <% }else { %>
                                    <input type="file" id="thumbnail" name="thumbnail">
                                    <% } %>
                                    <div id="thumbnail-alert"></div>

                                </div>
                                <div class="form-group">
                                	<label>Content</label>
                                	<br>
                                    <textarea name="content" id="content" cols="70" rows="10"><%= post.content %></textarea>
                                    <div id="content-alert"></div>
                                </div>
                                
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" class="btn btn-primary" id="post" name="btnLogin" value="Submit">
                            </fieldset>
                        </form>
				</div>
				<div class="col-md-4 sidebar-gutter">
					<div class="sidebar-offcanvas" id="sidebarLeft" role="navigation">
					<!-- sidebar-widget -->
					<div class="sidebar-widget">
						<h3 class="sidebar-title col-md-12 col-xs-12">POST</h3>
						<div class="widget-container">
							<article class="widget-post">
								<div class="post-body">
									<h2 class="db"><i class="glyphicon glyphicon-pencil"></i><a href="/post"> Create new post</a></h2>
									<br>
								</div>
								<div class="post-body">
									<h2 class="db"><i class="glyphicon glyphicon-list"></i><a href="/listpost/<%= user.id %>"> List post</a></h2>
									<br>
								</div>
							</article>
						</div>
					</div>
			
					<!-- sidebar-widget -->
					<div class="sidebar-widget">
						<img src="http://placehold.it/600x900" class="img-rounded" alt="">
					</div>
					<!-- sidebar-widget -->

					</div>
					
					</div>
				</div>
			</div>
		</section>
		</div><!-- /.container -->
		

<% include block/footer.ejs %>		

